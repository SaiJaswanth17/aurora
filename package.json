{
  "name": "aurora",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"bun run dev:server\" \"bun run dev:web\"",
    "dev:server": "cd apps/server && bun run dev",
    "dev:web": "cd apps/web && bun run dev",
    "build": "bun run build:shared && bun run build:server && bun run build:web",
    "build:shared": "cd packages/shared && bun run build",
    "build:server": "cd apps/server && bun run build",
    "build:web": "cd apps/web && bun run build",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
