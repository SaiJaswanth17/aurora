# Supabase Configuration
# Get these from your Supabase project settings at: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
# ⚠️ WARNING: SENSITIVE - Do not commit this key to version control
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# WebSocket Server Configuration
# Port for the WebSocket server (must match NEXT_PUBLIC_WS_URL in web app)
WS_PORT=3002
WS_HOST=localhost

# JWT Secret for WebSocket Authentication
# ⚠️ WARNING: SENSITIVE - Generate a secure random string (minimum 32 characters)
# You can generate one using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_secure_jwt_secret_min_32_chars

# File Upload Configuration
# Maximum file size in bytes (default: 5GB)
MAX_FILE_SIZE=5368709120
# Upload chunk size in bytes (default: 5MB)
UPLOAD_CHUNK_SIZE=5242880
